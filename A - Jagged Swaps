#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main(){
    ll t; cin >> t;
    while(t--){
        ll n,a,b; cin >> n;
        bool p = true;
        cin >> a;
        if(a!=1){
            p = false;
        }
        for(ll i=1; i<n; ++i){
            cin >> b;
        }
        if(p)cout << "YES" << endl;
        else{cout << "NO" << endl;}
    }
}
